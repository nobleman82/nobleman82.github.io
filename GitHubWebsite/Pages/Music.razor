@page "/music"
@inject Services.MusicService MusicService
@implements IDisposable

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row">
        @* Linke Seite: Player-Interface *@
        <div class="col-lg-8">
            <div class="video-main-container shadow-lg border-0 d-flex align-items-center justify-content-center"
                 style="background: linear-gradient(135deg, #6f42c1 0%, #1a2a6c 100%); min-height: 450px; border-radius: 20px; position: relative; overflow: hidden;">

                <div class="text-center text-white p-5" style="z-index: 2;">
                    @if (!string.IsNullOrEmpty(MusicService.CurrentPlaylistId) && MusicService.IsPlaying)
                    {
                        <div class="music-animation mb-4">
                            @for (int i = 0; i < 5; i++)
                            {
                                <span class="bar"></span>
                            }
                        </div>
                        <h2 class="fw-bold mb-2">Wiedergabe läuft...</h2>
                        <p class="opacity-75 mb-4">Genieße die Musik, während du durch die Seite stöberst.</p>

                        @* STEUERUNGS-BUTTONS *@
                        <div class="d-flex justify-content-center align-items-center gap-4 mb-5">
                            <button class="btn btn-outline-light rounded-circle control-btn-large" @onclick="MusicService.Previous">
                                <i class="bi bi-skip-start-fill"></i>
                            </button>

                            <button class="btn btn-light rounded-circle play-pause-btn shadow" @onclick="MusicService.TogglePlay">
                                <i class="bi @(MusicService.IsPlaying ? "bi-pause-fill" : "bi-play-fill")"></i>
                            </button>

                            <button class="btn btn-outline-light rounded-circle control-btn-large" @onclick="MusicService.Next">
                                <i class="bi bi-skip-end-fill"></i>
                            </button>
                        </div>

                        @* LAUTSTÄRKEN SLIDER *@
                        <div class="volume-container mx-auto p-3 rounded-pill bg-white bg-opacity-10" style="max-width: 300px;">
                            <div class="d-flex align-items-center gap-3">
                                <i class="bi bi-volume-down-fill"></i>
                                <input type="range" class="form-range custom-range" min="0" max="100"
                                       @oninput="(e) => MusicService.SetVolume(int.Parse(e.Value.ToString()))" />
                                <i class="bi bi-volume-up-fill"></i>
                            </div>
                        </div>

                        <button class="btn btn-link text-white text-decoration-none opacity-50 mt-4" @onclick="MusicService.Stop">
                            <i class="bi bi-stop-circle me-1"></i> Player beenden
                        </button>
                    }
                    else
                    {
                        <div class="player-placeholder animate__animated animate__pulse animate__infinite">
                            <i class="bi bi-vinyl fs-1 d-block mb-3 opacity-50"></i>
                            <h2 class="fw-light">Bereit zum Abspielen</h2>
                            <p class="opacity-50">Wähle rechts eine Playlist aus, um die Session zu starten.</p>
                        </div>
                    }
                </div>

                @* Dekorativer Hintergrund-Effekt *@
                <div class="bg-glow"></div>
            </div>
        </div>

        @* Rechte Seite: Playlisten Auswahl *@
        <div class="col-lg-4">
            <h4 class="mb-4 fw-bold">Deine Playlisten</h4>
            <div class="list-group shadow-sm rounded-4 overflow-hidden border-0">
                <button class="list-group-item list-group-item-action p-4 border-0 @(MusicService.CurrentPlaylistId == "PL3FoH-zqhwZRUMEFNgdAMRUMKt_BtWyrk" ? "active-playlist" : "")"
                        @onclick='() => MusicService.SetPlaylist("PL3FoH-zqhwZRUMEFNgdAMRUMKt_BtWyrk")'>
                    <div class="d-flex align-items-center">
                        <div class="playlist-icon-box me-3">
                            <i class="bi bi-music-clef-treble"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Classic Playlist</div>
                            <small class="opacity-75">Meisterwerke am Klavier</small>
                        </div>
                        <i class="bi bi-play-circle-fill ms-auto fs-4 play-hint"></i>
                    </div>
                </button>

                <button class="list-group-item list-group-item-action p-4 border-0 @(MusicService.CurrentPlaylistId == "PL3FoH-zqhwZSSfOw-L4w1Kc8FWjABzEa7" ? "active-playlist" : "")"
                        @onclick='() => MusicService.SetPlaylist("PL3FoH-zqhwZSSfOw-L4w1Kc8FWjABzEa7")'>
                    <div class="d-flex align-items-center">
                        <div class="playlist-icon-box me-3">
                            <i class="bi bi-stars"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Modern Playlist</div>
                            <small class="opacity-75">Zeitgenössische Stücke</small>
                        </div>
                        <i class="bi bi-play-circle-fill ms-auto fs-4 play-hint"></i>
                    </div>
                </button>
            </div>

            <div class="mt-4 p-4 rounded-4 bg-white shadow-sm border border-light">
                <h6 class="fw-bold mb-2"><i class="bi bi-info-circle me-2 text-primary"></i>Hintergrund-Wiedergabe</h6>
                <p class="small text-muted mb-0">
                    Dank der YouTube API läuft die Musik nahtlos weiter, während du durch mein Portfolio blätterst. Die Steuerung findest du jederzeit auch oben im Menü.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .active-playlist {
        background-color: #6f42c1 !important;
        color: white !important;
    }

    .playlist-icon-box {
        width: 45px;
        height: 45px;
        background: rgba(111, 66, 193, 0.1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #6f42c1;
    }

    .active-playlist .playlist-icon-box {
        background: rgba(255,255,255,0.2);
        color: white;
    }

    .list-group-item {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0 !important;
    }

        .list-group-item:hover:not(.active-playlist) {
            background-color: #f8f9fa;
            transform: translateX(5px);
        }

    /* Player Controls Styling */
    .control-btn-large {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        border-width: 2px;
    }

    .play-pause-btn {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: #1a2a6c;
    }

    /* Lautstärken-Slider Anpassung */
    .custom-range::-webkit-slider-thumb {
        background: #6f42c1;
    }

    .custom-range::-moz-range-thumb {
        background: #6f42c1;
    }

    /* Animation & Effekte */
    .bg-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 150%;
        height: 150%;
        background: radial-gradient(circle, rgba(111,66,193,0.2) 0%, transparent 70%);
        z-index: 1;
    }

    .music-animation {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        height: 60px;
        gap: 8px;
    }

        .music-animation .bar {
            width: 10px;
            background: white;
            border-radius: 5px;
            animation: music-flow 1.2s ease-in-out infinite;
        }

            .music-animation .bar:nth-child(1) {
                height: 20px;
                animation-delay: 0s;
            }

            .music-animation .bar:nth-child(2) {
                height: 50px;
                animation-delay: 0.2s;
            }

            .music-animation .bar:nth-child(3) {
                height: 35px;
                animation-delay: 0.4s;
            }

            .music-animation .bar:nth-child(4) {
                height: 55px;
                animation-delay: 0.6s;
            }

            .music-animation .bar:nth-child(5) {
                height: 25px;
                animation-delay: 0.8s;
            }

    @@keyframes music-flow {
        0%, 100% {
            height: 20px;
        }

        50% {
            height: 60px;
        }
    }
</style>

@code {
    protected override void OnInitialized()
    {
        MusicService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        MusicService.OnChange -= StateHasChanged;
    }
}
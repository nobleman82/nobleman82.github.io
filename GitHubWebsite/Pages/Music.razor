@page "/music"
@inject Services.MusicService MusicService
@implements IDisposable

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row">
        @* Linke Seite: Aktueller Status / "Visualisierung" *@
        <div class="col-lg-8">
            <div class="video-main-container shadow-lg border-0 d-flex align-items-center justify-content-center"
                 style="background: linear-gradient(135deg, #6f42c1 0%, #1a2a6c 100%); min-height: 450px; border-radius: 20px;">

                <div class="text-center text-white p-5">
                    @if (!string.IsNullOrEmpty(MusicService.CurrentPlaylistId) && MusicService.IsPlaying)
                    {
                        @* Nur eine Animation, kein echtes Video hier! *@
                        <div class="music-animation mb-4">
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                            <span class="bar"></span>
                        </div>
                        <h2 class="fw-bold">Wiedergabe läuft...</h2>
                        <p class="opacity-75">Genieße die Musik, während du durch die Seite stöberst.</p>
                        <button class="btn btn-outline-light rounded-pill px-4 mt-3" @onclick="MusicService.Stop">
                            <i class="bi bi-stop-fill me-2"></i> Stoppen
                        </button>
                    }
                    else
                    {
                        <div class="player-placeholder">
                            <i class="bi bi-vinyl fs-1 d-block mb-3 opacity-50"></i>
                            <h2 class="fw-light">Bereit zum Abspielen</h2>
                            <p class="opacity-50">Wähle rechts eine Playlist aus, um zu starten.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Rechte Seite: Playlisten Auswahl *@
        <div class="col-lg-4">
            <h4 class="mb-4 fw-bold">Playlisten</h4>
            <div class="list-group shadow-sm rounded-4 overflow-hidden">
                <button class="list-group-item list-group-item-action p-4 border-0 @(MusicService.CurrentPlaylistId == "PL3FoH-zqhwZRUMEFNgdAMRUMKt_BtWyrk" ? "active-playlist" : "")"
                        @onclick='() => MusicService.SetPlaylist("PL3FoH-zqhwZRUMEFNgdAMRUMKt_BtWyrk")'>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-music-clef-treble fs-3 me-3"></i>
                        <div>
                            <div class="fw-bold">Classic Playlist</div>
                            <small class="opacity-75">Meisterwerke am Klavier</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto"></i>
                    </div>
                </button>

                <button class="list-group-item list-group-item-action p-4 border-0 @(MusicService.CurrentPlaylistId == "PL3FoH-zqhwZSSfOw-L4w1Kc8FWjABzEa7" ? "active-playlist" : "")"
                        @onclick='() => MusicService.SetPlaylist("PL3FoH-zqhwZSSfOw-L4w1Kc8FWjABzEa7")'>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-stars fs-3 me-3"></i>
                        <div>
                            <div class="fw-bold">Modern Playlist</div>
                            <small class="opacity-75">Zeitgenössische Stücke</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto"></i>
                    </div>
                </button>
            </div>

            <div class="mt-4 p-3 bg-light rounded-4 border border-info border-opacity-10">
                <small class="text-muted d-flex align-items-center">
                    <i class="bi bi-info-circle me-2"></i>
                    Die Musik läuft global weiter, auch wenn du die Seite wechselst.
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .active-playlist {
        background-color: #6f42c1 !important;
        color: white !important;
    }

    .list-group-item {
        transition: all 0.3s ease;
    }

        .list-group-item:hover:not(.active-playlist) {
            background-color: #f8f9fa;
            padding-left: 3rem !important;
        }

    /* Große Music-Bars Animation */
    .music-animation {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        height: 60px;
        gap: 8px;
    }

        .music-animation .bar {
            width: 12px;
            background: white;
            border-radius: 5px;
            animation: music-flow 1.2s ease-in-out infinite;
        }

            .music-animation .bar:nth-child(1) {
                height: 20px;
                animation-delay: 0s;
            }

            .music-animation .bar:nth-child(2) {
                height: 50px;
                animation-delay: 0.2s;
            }

            .music-animation .bar:nth-child(3) {
                height: 35px;
                animation-delay: 0.4s;
            }

            .music-animation .bar:nth-child(4) {
                height: 55px;
                animation-delay: 0.6s;
            }

            .music-animation .bar:nth-child(5) {
                height: 25px;
                animation-delay: 0.8s;
            }

    @@keyframes music-flow {
        0%, 100% {
            height: 20px;
        }

        50% {
            height: 60px;
        }
    }
</style>

@code {
    protected override void OnInitialized()
    {
        MusicService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        MusicService.OnChange -= StateHasChanged;
    }
}
@page "/"
@using System.Text.Json
@using System.Xml.Linq
@inject HttpClient Http

<div class="home-flex-container">
    @* CONTENT SEKTION *@
    <div class="text-section">
        <h5 class="text-muted fw-bold mb-2">Hi, ich bin Mario!</h5>
        <h1 class="display-huge fw-bolder mb-0">CREATIVE</h1>
        <h1 class="display-huge fw-bolder text-gradient mb-3">DEVELOPER</h1>

        <p class="text-muted lead-text mb-4">
            Ich entwickle moderne Softwarelösungen in C#, baue leidenschaftlich
            Elektronik-Hardware und finde meinen Ausgleich am Klavier.
        </p>

        @* WIDGETS (Wieder vollzählig vorhanden) *@
        <div class="highlight-grid mb-4">
            <div class="highlight-card">
                @if (latestHighlight != null)
                {
                    <div class="d-flex align-items-center mb-1">
                        <div class="icon-box-small me-2"><i class="@GetCategoryIcon(latestHighlight.Category)"></i></div>
                        <span class="badge-custom">LATEST @latestHighlight.Category.ToUpper()</span>
                    </div>
                    <h6 class="fw-bold mb-1 text-dark">@latestHighlight.Title</h6>
                    <p class="small text-muted mb-0">@latestHighlight.Description</p>
                }
            </div>

            <div class="highlight-card">
                @if (latestVideo != null)
                {
                    <a href="@latestVideo.Link" target="_blank" style="text-decoration: none;">
                        <div class="d-flex align-items-center mb-1">
                            <div class="icon-box-small me-2 text-danger"><i class="bi bi-play-circle-fill"></i></div>
                            <span class="badge-custom-red">NEW VIDEO</span>
                        </div>
                        <h6 class="fw-bold mb-1 text-dark">@latestVideo.Title</h6>
                    </a>
                }
                else
                {
                    <div class="d-flex align-items-center h-100">
                        <div class="spinner-border spinner-border-sm text-danger me-2"></div>
                        <span class="text-muted small">YouTube Feed...</span>
                    </div>
                }
            </div>
        </div>

        <div class="button-group">
            <NavLink href="projects" class="btn btn-primary btn-xl shadow">Projekte</NavLink>
            @* Hier ist jetzt dein korrekter Kanal-Link *@
            <a href="https://www.youtube.com/@@mariotuerk5671" target="_blank" class="btn btn-outline-dark btn-xl">YouTube Kanal</a>
        </div>
    </div>

    @* BILD SEKTION *@
    <div class="image-section">
        <img src="images/mario_wand.webp" class="hero-img-final" alt="Mario" />
    </div>
</div>

<style>
    .home-flex-container {
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 1.5rem;
        gap: 1rem;
    }

    .text-section {
        flex: 1;
        z-index: 10;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .image-section {
        flex: 0 0 auto;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        min-height: 250px; /* Platz für Mario auf Mobile */
    }

    .hero-img-final {
        max-width: 70%;
        height: auto;
        max-height: 35vh;
        object-fit: contain;
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.15));
    }

    /* DESKTOP OPTIMIERUNG (ab ca. 992px) */
    @@media (min-width: 992px) {
        .home-flex-container {
            flex-direction: row;
            padding: 0 4rem;
            height: 100%;
        }

        .text-section {
            flex: 0 0 60%;
            text-align: left;
            align-items: flex-start;
        }

        .image-section {
            flex: 0 0 40%;
            position: absolute;
            right: 0;
            bottom: 0;
            height: 100%;
            justify-content: flex-end;
        }

        .hero-img-final {
            max-width: 100%;
            max-height: 95%;
            transform: translateY(2rem); /* Mario steht auf dem Rand */
        }
    }

    /* TYPOGRAFIE & CARDS */
    .display-huge {
        font-size: clamp(2.2rem, 7vw, 5rem);
        line-height: 1;
    }

    .lead-text {
        font-size: clamp(1rem, 1.5vw, 1.2rem);
        max-width: 550px;
    }

    .highlight-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
        width: 100%;
        max-width: 600px;
    }

    .highlight-card {
        background: #f8f9fa;
        border-radius: 18px;
        padding: 1rem;
        border: 1px solid rgba(0,0,0,0.05);
        text-align: left;
    }

    .button-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>

@code {
    public class ProjectItem { public string Title { get; set; } = ""; public string Description { get; set; } = ""; public string Category { get; set; } = ""; public DateTime Date { get; set; } }
    public class GitHubRepo { public string? Name { get; set; } public string? Description { get; set; } public DateTime Pushed_At { get; set; } }
    public class YouTubeVideo { public string? Title { get; set; } public string? Link { get; set; } }

    private ProjectItem? latestHighlight;
    private YouTubeVideo? latestVideo;
    private bool isYouTubeLoading = true;

    protected override async Task OnInitializedAsync()
    {
       
        try
        {
            var githubData = await Http.GetFromJsonAsync<GitHubRepo[]>("https://api.github.com/users/Nobleman82/repos");
            if (githubData != null && githubData.Any())
            {
                var topRepo = githubData.OrderByDescending(p => p.Pushed_At).First();
                latestHighlight = new ProjectItem
                {
                    Title = topRepo.Name ?? "Software",
                    Description = topRepo.Description ?? "Updates auf GitHub.",
                    Category = "Software"
                };
            }
        }
        catch { /* GitHub Fehler lautlos abfangen */ }

        await LoadYouTubeFeed();
    }

    private async Task LoadYouTubeFeed()
    {
        isYouTubeLoading = true;
        try
        {
            // Deine korrekte Channel-ID basierend auf deinem Link
            var channelId = "UCuDMAxiXQJgajsulFJ2EkTw";
            var rssUrl = $"https://api.allorigins.win/get?url={Uri.EscapeDataString("https://www.youtube.com/feeds/videos.xml?channel_id=" + channelId)}";

            // Wir nutzen ein Timeout, damit die App nicht ewig wartet
            var cts = new CancellationTokenSource(TimeSpan.FromSeconds(5));
            var response = await Http.GetAsync(rssUrl, cts.Token);

            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadFromJsonAsync<JsonElement>();
                if (json.TryGetProperty("contents", out var contents))
                {
                    var xmlContent = contents.GetString();
                    if (!string.IsNullOrEmpty(xmlContent))
                    {
                        var doc = XDocument.Parse(xmlContent);
                        XNamespace ns = "http://www.w3.org/2005/Atom";
                        var latestEntry = doc.Descendants(ns + "entry").FirstOrDefault();

                        if (latestEntry != null)
                        {
                            latestVideo = new YouTubeVideo
                            {
                                Title = latestEntry.Element(ns + "title")?.Value,
                                Link = latestEntry.Element(ns + "link")?.Attribute("href")?.Value
                            };
                        }
                    }
                }
            }
        }
        catch (Exception ex)
        {
            // WICHTIG: Kein Absturz! Wir loggen nur und zeigen das Widget im "Offline-Modus"
            Console.WriteLine($"YouTube Feed Info: {ex.Message}");
            latestVideo = null;
        }
        finally
        {
            isYouTubeLoading = false;
            StateHasChanged();
        }
    }

    private string GetCategoryIcon(string category) => category switch { "Software" => "bi bi-code-slash", "CNC" => "bi bi-tools", "Elektronik" => "bi bi-cpu", _ => "bi bi-star" };
}
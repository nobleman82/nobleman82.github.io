@page "/"
@using System.Text.Json
@using System.Xml.Linq
@inject HttpClient Http

<div class="home-flex-container">
    @* LINKE SEITE: TEXT & CARDS *@
    <div class="text-section">
        <h5 class="text-muted fw-bold mb-3">Hi, ich bin Mario!</h5>
        <h1 class="display-huge fw-bolder mb-0">CREATIVE</h1>
        <h1 class="display-huge fw-bolder text-gradient mb-4">DEVELOPER</h1>

        <p class="text-muted fs-4 mb-5 lead-text">
            Ich entwickle moderne Softwarelösungen in C#, baue leidenschaftlich
            Elektronik-Hardware und finde meinen Ausgleich am Klavier.
        </p>

        @* Highlights Bereich *@
        <div class="highlight-grid mb-5">
            <div class="highlight-card">
                @if (latestHighlight != null)
                {
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-box me-3">
                            <i class="@(GetCategoryIcon(latestHighlight.Category))"></i>
                        </div>
                        <div>
                            <span class="badge-custom">LATEST @latestHighlight.Category.ToUpper()</span>
                            <h6 class="mb-0 fw-bold">@latestHighlight.Title</h6>
                        </div>
                    </div>
                    <p class="small text-muted mb-0">@latestHighlight.Description</p>
                }
            </div>

            @* YOUTUBE HIGHLIGHT *@
            <div class="highlight-card">
                @if (latestVideo != null)
                {
                    <a href="@latestVideo.Link" target="_blank" style="text-decoration: none; color: inherit;">
                        <div class="d-flex align-items-center mb-2">
                            <div class="icon-box me-3 text-danger"><i class="bi bi-play-circle-fill"></i></div>
                            <div>
                                <span class="badge-custom-red">NEW VIDEO</span>
                                <h6 class="mb-0 fw-bold">@latestVideo.Title</h6>
                            </div>
                        </div>
                        <p class="small text-muted mb-0">Jetzt auf meinem Kanal ansehen.</p>
                    </a>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="spinner-border spinner-border-sm text-danger me-2"></div>
                        <span class="text-muted small">Suche Video...</span>
                    </div>
                }
            </div>
          
        </div>

        <div class="button-group">
            <NavLink href="projects" class="btn btn-primary btn-xl shadow">Projekte entdecken</NavLink>
            <a href="..." class="btn btn-outline-dark btn-xl">YouTube Kanal</a>
        </div>
    </div>

    @* RECHTE SEITE: DAS BILD *@
    <div class="image-section">
        <img src="images/mario_wand.webp" class="hero-img-final" alt="Mario" />
    </div>
</div>

<style>
    .home-flex-container {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        gap: 2rem;
    }

    .text-section {
        flex: 1.2; /* Text bekommt mehr Platz */
        min-width: 500px;
        z-index: 10;
    }

    .image-section {
        flex: 0.8;
        height: 100%;
        display: flex;
        align-items: flex-end;
        justify-content: flex-end;
        position: relative;        
        padding-right: 3rem;
    }

    .hero-img-final {
        max-height: 85vh; /* Skaliert mit der Fensterhöhe */
        width: auto;
        max-width: 100%;
        object-fit: contain;
        /* Mario steht bündig auf dem Footer-Rand */
        margin-bottom: -5.5rem;
        filter: drop-shadow(10px 10px 30px rgba(0,0,0,0.1));
    }

    /* Skalierende Typografie */
    .display-huge {
        font-size: clamp(2.5rem, 5vw, 6rem);
        line-height: 1;
        letter-spacing: -2px;
    }

    .highlight-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        max-width: 700px;
    }

    .highlight-card {
        background: #f8f9fa;
        border-radius: 20px;
        padding: 1.2rem;
        border: 1px solid rgba(0,0,0,0.05);
        transition: 0.3s;
    }

        .highlight-card:hover {
            transform: translateY(-5px);
            background: white;
        }

    .badge-custom {
        font-size: 0.65rem;
        font-weight: 800;
        color: #1a2a6c;
        text-uppercase;
    }

    .badge-custom-red {
        font-size: 0.65rem;
        font-weight: 800;
        color: #dc3545;
        text-uppercase;
    }

    .icon-box {
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    /* Buttons werden bei kleiner Auflösung nicht zu klein */
    .button-group {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    @@media (max-width: 1200px) {
        .home-flex-container {
            flex-direction: column;
            text-align: center;
            padding-top: 2rem;
        }

        .image-section {
            order: 2;
            padding-right: 0;
        }

        .text-section {
            min-width: 100%;
            order: 1;
        }

        .hero-img-final {
            max-height: 40vh;
            margin-bottom: 0;
        }

        .highlight-grid {
            margin: 0 auto 2rem auto;
        }

        .button-group {
            justify-content: center;
        }
    }
</style>

@code {
    public class ProjectItem
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public string ImageUrl { get; set; }
        public DateTime Date { get; set; }
        public string Category { get; set; }
        public string Link { get; set; }
    }

    public class GitHubRepo
    {
        public string Name { get; set; }
        public string Description { get; set; }
        public DateTime Pushed_At { get; set; }
    }

    public class YouTubeVideo
    {
        public string Title { get; set; }
        public string Link { get; set; }
    }

    private ProjectItem latestHighlight;
    private YouTubeVideo latestVideo;

    protected override async Task OnInitializedAsync()
    {
        // 1. Manuelle Projekte definieren
        var manualProjects = new List<ProjectItem>
        {
            new ProjectItem {
                Title = "CNC Fräsung: Eichenschild",
                Description = "3D-Relief aus massiver Eiche gefertigt.",
                Date = new DateTime(2024, 05, 10),
                Category = "CNC",
                ImageUrl = "images/projects/cnc-shield.jpg"
            },
            new ProjectItem {
                Title = "Custom PCB: MIDI-Controller",
                Description = "Eigenbau-Elektronik für den Flügel.",
                Date = new DateTime(2024, 05, 15),
                Category = "Elektronik",
                ImageUrl = "images/projects/midi-pcb.jpg"
            }
        };

        try
        {
            // 2. GitHub Daten laden
            var githubData = await Http.GetFromJsonAsync<GitHubRepo[]>("https://api.github.com/users/Nobleman82/repos");
            var allProjects = new List<ProjectItem>(manualProjects);

            if (githubData != null)
            {
                allProjects.AddRange(githubData.Select(g => new ProjectItem
                {
                    Title = g.Name,
                    Description = g.Description,
                    Date = g.Pushed_At,
                    Category = "Software",
                    ImageUrl = $"https://raw.githubusercontent.com/Nobleman82/{g.Name}/master/preview.png"
                }));
            }
            latestHighlight = allProjects.OrderByDescending(p => p.Date).FirstOrDefault();

            // 3. YouTube Video laden via RSS Proxy
            var channelId = "UCuDMAxiXQJgajsulFJ2EkTw";
            var rssUrl = $"https://api.allorigins.win/get?url={Uri.EscapeDataString("https://www.youtube.com/feeds/videos.xml?channel_id=" + channelId)}";

            var ytResponse = await Http.GetFromJsonAsync<JsonElement>(rssUrl);
            var xmlContent = ytResponse.GetProperty("contents").GetString();

            if (!string.IsNullOrEmpty(xmlContent))
            {
                var doc = XDocument.Parse(xmlContent);
                XNamespace ns = "http://www.w3.org/2005/Atom";
                var latestEntry = doc.Descendants(ns + "entry").FirstOrDefault();

                if (latestEntry != null)
                {
                    latestVideo = new YouTubeVideo
                    {
                        Title = latestEntry.Element(ns + "title")?.Value,
                        Link = latestEntry.Element(ns + "link")?.Attribute("href")?.Value
                    };
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fehler beim Laden der Home-Highlights: {ex.Message}");
        }
    }

    private string GetCategoryIcon(string category) => category switch
    {
        "Software" => "bi bi-code-slash",
        "CNC" => "bi bi-tools",
        "Elektronik" => "bi bi-cpu",
        "3D Druck" => "bi bi-layers-half",
        _ => "bi bi-star"
    };
}
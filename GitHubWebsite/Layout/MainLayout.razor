@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="master-wrapper">
    <div class="app-window shadow-lg">
        <header class="window-header">
            <NavMenu />
        </header>

        @* Wichtig: overflow: visible für den 3D-Effekt von Mario *@
        <main class="window-content">
            <div class="page-animation h-100" @key="NavManager.Uri">
                @Body
            </div>
        </main>

        <footer class="window-footer home-footer-fix">
            <div class="d-flex justify-content-between align-items-center px-4 pb-3">
                @* Hier könnten Social Icons o.ä. stehen *@             
            </div>
        </footer>
    </div>

    @* Diese Links liegen jetzt garantiert unter der Box *@
    <div class="external-legal-links">
        <NavLink class="legal-link-item" href="impressum">Impressum</NavLink>
        <span class="divider">|</span>
        <NavLink class="legal-link-item" href="datenschutz">Datenschutz</NavLink>
    </div>
</div>